<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mzbcacak.kele.cityinfosrbija.Banke"
    android:background="@drawable/pozadina">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:background="@android:color/transparent"
        android:layout_below="@+id/meniHeader"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/meniFooter">

    </android.support.v7.widget.RecyclerView>

    <fragment
        android:id="@+id/meniHeader"
        android:name="com.mzbcacak.kele.cityinfosrbija.HeaderFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_header"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <fragment
        android:id="@+id/meniFooter"
        android:name="com.mzbcacak.kele.cityinfosrbija.FooterFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        tools:layout="@layout/fragment_footer" />

</RelativeLayout>