<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mzbcacak.kele.cityinfosrbija.HeaderFragment">
    <!--   015a8b   393838-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/headerToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/headerback"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/naslov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="45dp"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="5dp"
                android:text="Čačak"
                android:textSize="30dp"
                android:textColor="#fff"
                android:layout_toEndOf="@+id/grbGrada"
                android:layout_toStartOf="@+id/pretraga"/>
            <ImageButton
                android:id="@+id/omiljeno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/srcep"
                android:layout_toStartOf="@+id/pretraga" />
            <ImageView
                android:id="@+id/grbGrada"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/grbcacak"
                android:layout_alignParentTop="true"
                />
            <SearchView
                android:id="@+id/pretraga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                tools:onClick="pretrazi"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true">


            </SearchView>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</RelativeLayout>
